{
    "sections": [
        {
            "label": "Cargo",
            "options": [
                {
                    "type": "choices",
                    "name": "buildType",
                    "choices": [
                        {
                            "label": "Debug"
                        },
                        {
                            "label": "Release",
                            "args": [
                                "--release"
                            ]
                        }
                    ]
                },
                {
                    "type": "flag",
                    "name": "runTests",
                    "label": "Run Tests",
                    "value": false,
                    "args": [
                        "--tests"
                    ]
                },
                {
                    "type": "flag",
                    "name": "moarOptions",
                    "label": "Some Flag",
                    "value": true,
                    "args": [
                        "--a-flag"
                    ]
                }
            ],
            "actions": [
                {
                    "name": "Build",
                    "execute": "cargo",
                    "args": [
                        "build"
                    ],
                    "use_options": [
                        "buildType",
                        "runTests"
                    ],
                    "success_sound": "sounds/success_hard.ogg"
                },
                {
                    "name": "Run",
                    "execute": "cargo",
                    "args": [
                        "run"
                    ],
                    "use_options": [
                        "buildType"
                    ]
                }
            ]
        },
        {
            "label": "Test Succeess/Fail",
            "actions": [
                {
                    "name": "Test Success",
                    "execute": "./test/scripts/succeed.bat",
                    "success_sound": "sounds/success_hard.ogg",
                    "fail_sound": "sounds/fail_hard.ogg"
                },
                {
                    "name": "Test Fail",
                    "execute": "./test/scripts/fail.bat",
                    "success_sound": "sounds/success_hard.ogg",
                    "fail_sound": "sounds/fail_hard.ogg"
                }
            ]
        },
        {
            "label": "Test Variants",
            "options": [
                {
                    "type": "choices",
                    "name": "variantChoice",
                    "choices": [
                        {
                            "label": "Variant A",
                            "replacements": {
                                "variantPath": "VarA"
                            }
                        },
                        {
                            "label": "Variant B",
                            "replacements": {
                                "variantPath": "VarB"
                            }
                        }
                    ]
                }
            ],
            "actions": [
                {
                    "name": "Test Formatted Commands",
                    "execute": "./test/scripts/{{variantPath}}/succeed.bat",
                    "success_sound": "sounds/success_hard.ogg",
                    "fail_sound": "sounds/fail_hard.ogg",
                    "use_options": [
                        "variantChoice"
                    ]
                }
            ]
        },
        {
            "label": "Git",
            "options": [
                {
                    "type": "choices",
                    "name": "command",
                    "choices": [
                        {
                            "label": "Status",
                            "args": [
                                "status"
                            ]
                        },
                        {
                            "label": "Pull",
                            "args": [
                                "pull"
                            ]
                        },
                        {
                            "label": "Add All",
                            "args": [
                                "add",
                                "."
                            ]
                        }
                    ]
                }
            ],
            "actions": [
                {
                    "name": "Execute Git",
                    "execute": "git",
                    "use_options": [
                        "command"
                    ]
                }
            ]
        }
    ]
}